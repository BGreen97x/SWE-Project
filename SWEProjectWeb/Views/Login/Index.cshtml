@model IEnumerable<SWE_Project_LibDB.User>

@{
    ViewBag.Title = "Projectify - Login";
}

<h2>Login</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vorname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vorname)
            </td>
            <td>
                <!--@Html.ActionLink("Home", "Index", "Home")-->
                @Html.ActionLink("Select", "Select", new { id = item.UserId })
                <!-- @Html.ActionLink("Delete", "Delete", new { id = item.UserId }) -->
            </td>
        </tr>
    }
</table>

<h3> New Account </h3>
<p> @Html.ActionLink("Create New Account", "Index","Users/Create")</p>